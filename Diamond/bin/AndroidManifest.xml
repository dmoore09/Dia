<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vt.diamond"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="vt.diamond.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="vt.diamond.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="vt.diamond.GameActivityPlain"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>
        
         <activity
            android:name="vt.diamond.LayoutChangesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
         <activity
            android:name="vt.diamond.LayoutChangesActivityFavorites"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
         <activity
            android:name="vt.diamond.SettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="vt.diamond.ConfigureGame"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="vt.diamond.HowToPlay"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="vt.diamond.TutorialActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>
        
    </application>

</manifest>
